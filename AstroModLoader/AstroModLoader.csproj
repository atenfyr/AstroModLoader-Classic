<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>false</SelfContained>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <UseWindowsForms>true</UseWindowsForms>
    <ImportWindowsDesktopTargets>true</ImportWindowsDesktopTargets>
    <IncludeSourceRevisionInInformationalVersion>false</IncludeSourceRevisionInInformationalVersion>
    <AssemblyVersion>1.8.2.0</AssemblyVersion>
    <FileVersion>1.8.2.0</FileVersion>
    <Version>1.8.2.0</Version>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <Product>AstroModLoader Classic</Product>
    <Copyright>Copyright © AstroTechies, atenfyr 2026</Copyright>
    <Configurations>Debug;Release;Debug_CustomRoutineTest</Configurations>
  </PropertyGroup>
  <PropertyGroup>
    <ApplicationIcon>Resources\icon.ico</ApplicationIcon>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="ModIntegrator.exe" />
    <None Remove="UAssetAPI.dll" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="CoolButton.cs">
      <SubType>Component</SubType>
    </Compile>
    <Compile Update="CoolBorderedControls.cs">
      <SubType>Component</SubType>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <Content Include="next_patch_notes.txt" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="ModIntegrator.exe" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="CommandLineParser">
      <Version>2.9.1</Version>
    </PackageReference>
    <PackageReference Include="Costura.Fody" Version="5.7.0">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Fody" Version="6.5.5">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="Ookii.Dialogs.WinForms">
      <Version>4.0.0</Version>
    </PackageReference>
    <PackageReference Include="Semver" Version="3.0.0" />
    <PackageReference Include="System.Data.DataSetExtensions" Version="4.5.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>
  <Choose>
    <When Condition="'$(Configuration)' == 'Debug_CustomRoutineTest'">
        <ItemGroup>
          <ProjectReference Include="..\AMLCustomRoutines\AMLCustomRoutines.csproj" />
        </ItemGroup>
    </When>
  </Choose>
  <ItemGroup>
    <ProjectReference Include="..\AstroModIntegrator\AstroModIntegrator.csproj" />
    <ProjectReference Include="..\ModIntegratorCMD\ModIntegratorCMD.csproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <PrivateAssets>all</PrivateAssets>
      <PropagateProjectReferenceProperties>false</PropagateProjectReferenceProperties>
    </ProjectReference>
  </ItemGroup>
  <ItemGroup>
    <Reference Include="UAssetAPI">
      <HintPath>..\AstroModIntegrator\UAssetAPI.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>